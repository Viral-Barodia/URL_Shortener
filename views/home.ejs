<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Home Page</title>
    </head>
    <body>
        <h1>URL Shortener</h1>
        <div>
            <form method="POST" action="/url">
                <label>Enter the URL</label>
                <input name="url" placeholder="http://example.com" type="text">
                <button type="submit">Generate</button>
            </form>
        </div>

        <!-- Render the Shortened URL -->
        <% if(locals.id) { %>
            <p>URL Generated: http://localhost:8000/url/<%= id %></p>
        <% } %>

        <!-- Renders the number of clicks on all URL in a tabulated format -->
        <div>
            <% if (locals.urls) { %>
                <table>
                    <thead>
                        <th>Sr. No</th>
                        <th>Short ID</th>
                        <th>Redirects To</th>
                        <th>Clicks</th>
                    </thead>
                    <tbody>
                        <% urls.forEach((url, index) => { %>
                            <tr>
                                <td> <%= index+1 %> </td>
                                <td> <%= url.shortId %> </td>
                                <td> <%= url.redirectURL %> </td>
                                <td> <%= url.visitHistory.length %> </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            <% } %>
        </div>
    </body>
</html>